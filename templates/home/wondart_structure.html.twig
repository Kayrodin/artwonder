    {% for wondart in wondarts %}
        <div class="wondarts">
            <a href="{{ path('wond_art_show', { 'id': wondart.id }) }}">
                <img src="{{ asset('uploads/wondarts/' ~ wondart.media) }}" class="card-img-top" alt="...">
                <div class="wondarts-body">
                    <h1 class="title">{{ wondart.titulo }}</h1>
                    <h2 class="autor">By {{ wondart.marcaAutor.nombre }}</h2>
                </div>
            </a>
        </div>
    {% endfor %}