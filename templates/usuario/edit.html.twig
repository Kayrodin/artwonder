{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/navLetter.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/ajustes.css') }}">
{% endblock %}
{% block title %}Ajustes{% endblock %}

{% block body %}

    {% for message in app.flashes('notice') %}
        <div class="alert alert-success flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <div id="menu-perfil">
        {% include 'navbar.html.twig' %}
    </div>

    <div class="ajustesContenedor">
        <h1>Ajustes</h1>

        {{ include('usuario/_form.html.twig') }}

        <div class="borrar">
            {{ include('usuario/_delete_form.html.twig') }}
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $( document ).ready(function() {
            $('.flash-notice').delay(3000).fadeOut();
        });
    </script>

{% endblock %}
